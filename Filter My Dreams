    function showCountries(continent) {
      document.body.style.background = countryData[continent].bg;
      const dropdown = document.getElementById('countryDropdown');
      dropdown.innerHTML = '';
      const countries = countryData[continent].countries;
      for (let country in countries) {
        const btn = document.createElement('button');
        btn.className = 'country-btn';
        btn.innerText = capitalize(country);
        btn.onclick = () => showPlaces(continent, country);
        dropdown.appendChild(btn);
      }
      dropdown.classList.add('active');
    }

    function showPlaces(continent, country) {
      document.body.style.background = countryData[continent].countries[country].bg;
      const places = countryData[continent].countries[country].places;
      const container = document.getElementById('placesContainer');
      container.innerHTML = '';
      places.forEach(place => {
        const card = document.createElement('div');
        card.className = 'place-card';
        card.innerHTML = `<h3>${place.name}</h3><p>${place.desc}</p>`;
        container.appendChild(card);
      });
    }

    function capitalize(word) {
      return word.charAt(0).toUpperCase() + word.slice(1);
    }
